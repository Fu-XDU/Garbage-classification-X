.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #ebebeb;
}

.title-tabs-bar-container {
  flex-direction: row;
  height: 72rpx;
  background-color: #9c978b;
  align-items: center;
  justify-content: center;
}

.warn {
  line-height: 72rpx;
  background-color: rgb(253, 245, 216);
  color: #030000;
  text-align: left;
  margin: 15rpx 10rpx 0 0;
  padding: 10rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-top: 0;
  border-radius: 30rpx;
  align-items: center;
  font-size: 30rpx;
}

.txt {
  line-height: 72rpx;
  background-color: #fff;
  color: #070000;
  margin: 10rpx 0;
  padding: 10rpx;
}

.productNav {
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei";
}

.left {
  width: 18%;
  font-size: 30rpx;
  background-color: rgb(241, 241, 241);
  position: fixed;
  top: 7%;
  left: 0;
  text-align: center;
}

.left view {
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}

.selected {
  background-color: #fff;
  border-left: 2px solid #e54847;
  font-weight: bold;
  color: #e54847;
}

.normal {
  background-color: #f4f4f4;
  border-bottom: 1px solid #f2f2f2;
}

.right {
  width: 100%;
  margin: 0 0 0 18%;
}

swiper {
  height: 500px;
}

.new {
  color:#f6f2f7;
  background-color: rgb(116, 64, 38);
}
image {
  width: 50%;
  vertical-align: top;
  display: block;
  height: 100%;
  align-items: center
}
